<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <p class="mb-0">Our Team</p>
      <a href="/admin/contact-cards/add" class="btn btn-success">
        <i class="fas fa-plus me-2"></i>Add New Card
      </a>
    </div>
  
    <div class="card shadow-sm">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Department</th>
                <th>Position</th>
                <th width="80">Order</th>
                <th width="100">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% contactCards.forEach(card => { %>
                <tr>
                  <td>
                    <div class="d-flex align-items-center">
                      <img src="<%= card.imageUrl || '/images/default-avatar.jpg' %>" 
                           alt="<%= card.name %>" 
                           class="rounded-circle me-2" 
                           width="40" 
                           height="40">
                      <%= card.name %>
                    </div>
                  </td>
                  <td>
                    <% if (card.email) { %>
                      <a href="mailto:<%= card.email %>" class="text-decoration-none">
                        <%= card.email %>
                      </a>
                      <% } else { %>
                        <span class="text-muted">None</span>
                        <% } %>
                      </td>
                      <td><%= card.department || '-' %></td>
                      <td><%= card.position %></td>
                  <td class="fw-bold"><%= card.order %></td>
                  <td>
                    <div class="d-flex gap-2">
                      <a href="/admin/contact-cards/edit/<%= card._id %>" class="btn btn-sm">
                        <i class="fas fa-edit"></i>
                      </a>
                      <a href="/admin/contact-cards/delete/<%= card._id %>" 
                         class="btn btn-sm" 
                         onclick="return confirm('Are you sure you want to delete this contact card?')">
                        <i class="fas fa-trash-alt"></i>
                      </a>
                    </div>
                  </td>
                  
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  
  <style>
    .table {
      /* font-size: 0.9rem; */
