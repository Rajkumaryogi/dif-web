<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <p class="mb-0">Mission & Vision Entries</p>
    <a href="/admin/mission-vision/create" class="btn btn-success">
      <i class="fas fa-plus me-2"></i>Add New
    </a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th width="80">Order</th>
              <th>Heading</th>
              <th>Subheading</th>
              <th>Description</th>
              <th width="150">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(item => { %>
              <tr>
                <td class="fw-bold"><%= item.order %></td>
                <td><%= item.heading %></td>
                <td><%= item.subheading %></td>
                <td class="text-truncate" style="max-width: 200px;" title="<%= item.description %>">
                  <%= item.description.substring(0, 50) %>...
                </td>
                <td>
                  <div class="d-flex gap-2">
                    <a href="/admin/mission-vision/edit/<%= item._id %>" class="btn btn-sm">
                      <i class="fas fa-edit"></i>
                    </a>
                    <form action="/admin/mission-vision/delete/<%= item._id %>" method="POST" class="d-inline">
                      <button class="btn btn-sm" onclick="return confirm('Are you sure?')">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<style>
  .table {
    font-size: 0.9rem;
  }
  .table th {
    font-weight: 500;
    text-transform: uppercase;
    font-size: 0.8rem;
    letter-spacing: 0.5px;
  }
  .table td {
    vertical-align: middle;
  }
</style>