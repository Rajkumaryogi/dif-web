<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Edit Social Icon</h2>
    <a href="/admin/socialIconsAdmin" class="btn btn-outline-secondary">
      <i class="fas fa-arrow-left"></i> Back to List
    </a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <form method="POST" action="/admin/socialIconsAdmin/edit/<%= icon._id %>">
        <div class="row g-3">
          <!-- Order -->
          <div class="col-md-6">
            <label for="order" class="form-label">Order</label>
            <input type="number" class="form-control" id="order" name="order" value="<%= icon.order %>" required>
          </div>

          <!-- Name -->
          <div class="col-md-6">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= icon.name %>" required>
          </div>

          <!-- URL -->
          <div class="col-12">
            <label for="url" class="form-label">URL</label>
            <input type="url" class="form-control" id="url" name="url" value="<%= icon.url %>" required>
          </div>

          <!-- Font Awesome Class -->
          <div class="col-md-6">
            <label for="iconClass" class="form-label">Icon Class</label>
            <div class="input-group">
              <span class="input-group-text"><i class="<%= icon.iconClass %>" style="color: <%= icon.color %>"></i></span>
              <input type="text" class="form-control" id="iconClass" name="iconClass" value="<%= icon.iconClass %>" required>
            </div>
            <small class="text-muted">Font Awesome class (e.g., "fa-brands fa-facebook")</small>
          </div>

          <!-- Visibility -->
          <div class="col-md-6">
            <label for="visibility" class="form-label">Visibility</label>
            <select class="form-select" id="visibility" name="visibility" required>
              <option value="true" <%= icon.visibility === true ? 'selected' : '' %>>Visible</option>
              <option value="false" <%= icon.visibility === false ? 'selected' : '' %>>Hidden</option>
            </select>
          </div>

          <!-- Color Picker -->
          <div class="col-md-6">
            <label for="color" class="form-label">Color</label>
            <div class="input-group color-picker">
              <input type="color" class="form-control form-control-color" id="color" name="color" value="<%= icon.color %>" required>
              <input type="text" class="form-control" value="<%= icon.color %>" id="colorText" readonly>
            </div>
          </div>
        </div>

        <div class="mt-4 d-flex justify-content-between">
          <button type="submit" class="btn btn-primary px-4">
            <i class="fas fa-save me-2"></i> Update Icon
          </button>
          <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
            <i class="fas fa-trash-alt me-2"></i> Delete
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm Deletion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this social icon?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form method="POST" action="/admin/socialIconsAdmin/delete/<%= icon._id %>" style="display: inline;">
          <button type="submit" class="btn btn-danger">Delete Permanently</button>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
  .color-picker {
    max-width: 200px;
  }
  .form-control-color {
    width: 50px;
    height: 38px;
  }
  .input-group-text i {
    width: 1em;
    text-align: center;
  }
</style>

<script>
  // Sync color picker with text field
  document.getElementById('color').addEventListener('input', function() {
    document.getElementById('colorText').value = this.value;
  });
</script>