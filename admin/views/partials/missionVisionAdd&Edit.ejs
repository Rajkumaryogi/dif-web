<div class="container py-4">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h2 class="h4 mb-0"><%= item ? 'Edit' : 'Add' %> Mission/Vision</h2>
    </div>
    <div class="card-body">
      <form method="POST" action="<%= item ? '/admin/mission-vision/edit/' + item._id : '/admin/mission-vision/create' %>">
        <div class="row g-3">
          <!-- Order -->
          <div class="col-md-6">
            <label class="form-label">Order</label>
            <input 
              type="number" 
              name="order" 
              class="form-control" 
              value="<%= item?.order || '' %>" 
              required
              min="1"
            >
            <div class="form-text">Display sequence (lower numbers appear first)</div>
          </div>

          <!-- Heading -->
          <div class="col-12">
            <label class="form-label">Heading</label>
            <input 
              type="text" 
              name="heading" 
              class="form-control" 
              value="<%= item?.heading || '' %>" 
              required
            >
          </div>

          <!-- Subheading -->
          <div class="col-12">
            <label class="form-label">Subheading</label>
            <input 
              type="text" 
              name="subheading" 
              class="form-control" 
              value="<%= item?.subheading || '' %>" 
              required
            >
          </div>

          <!-- Description -->
          <div class="col-12">
            <label class="form-label">Description</label>
            <textarea 
              name="description" 
              rows="5" 
              class="form-control" 
              required
            ><%= item?.description || '' %></textarea>
          </div>

          <!-- Form Actions -->
          <div class="col-12 mt-4">
            <div class="d-flex justify-content-between">
              <a href="/admin/mission-vision" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i> Back
              </a>
              <button type="submit" class="btn btn-primary px-4">
                <i class="fas fa-save me-2"></i> Save
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<style>
  .form-control:focus, .form-select:focus {
    border-color: #86b7fe;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
  }
  textarea.form-control {
    min-height: 120px;
  }
</style>