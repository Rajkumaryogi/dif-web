<!DOCTYPE html>
<html>
<head>
  <title>Reset Password</title>
  <!-- <link rel="stylesheet" href="/admin/admin.css"> -->
</head>
<body>
  <div class="login-container">
    <h2>Enter New Password</h2>
    <% if (error) { %><p class="error alert-danger"><%= error %></p><% } %>

    <form method="POST" action="/admin/reset-password/<%= token %>">
        <input type="password" name="password" placeholder="Password" required />
        <button type="submit">Reset</button>
        <% if (typeof reset !== 'undefined' && reset === 'success') { %>
            <div class="alert alert-success">Password reset successfully! Please login.</div>
          <% } %>
      </form>
    <lu>
      <a class="button" href="/admin/Login"> Login
      </a>
    </lu>
  </div>
</body>
</html>
