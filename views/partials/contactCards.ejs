<!-- views/partials/contactCards.ejs -->
<div class="team-container">
    <% if (teamMembers && teamMembers.length) { %>
      <div class="row justify-content-center">
        <% teamMembers.forEach((member, index) => { %>
          <div class="col-lg-3 col-md-6 mb-4">
            <div class="team-card">
              <!-- Member Image -->
              <div class="team-img-container">
                <img src="<%= member.imageUrl || '/images/default-avatar.jpg' %>" 
                     alt="<%= member.name %>" 
                     class="team-img">
                <% if (member.designation) { %>
                  <div class="designation-badge"><%= member.designation %></div>
                <% } %>
              </div>
  
              <!-- Member Info -->
              <div class="team-info">
                <h3 class="member-name"><%= member.name %></h3>
                
                <% if (member.position) { %>
                  <p class="member-position"><%= member.position %></p>
                <% } %>
  
                <!-- Contact Info -->
                <div class="contact-details">
                  <% if (member.email) { %>
                    <div class="contact-item">
                      <i class="fas fa-envelope"></i>
                      <a href="mailto:<%= member.email %>"><%= member.email %></a>
                    </div>
                  <% } %>

                  <% if (member.department) { %>
                    <div class="contact-item">
                      <i class="fas fa-building"></i>
                      <span><%= member.department %></span>
                    </div>
                  <% } %>
                </div>
  
                <!-- Social Links -->
                <% if (member.socialLinks && member.socialLinks.length) { %>
                  <div class="social-links">
                    <% member.socialLinks.forEach(link => { %>
                      <a href="<%= link.url %>" target="_blank" rel="noopener noreferrer">
                        <i class="fab fa-<%= link.name.toLowerCase() %>"
                          style = "--hover-color:<%= link.color %>"
                          onmouseover="this.style.color='var(--hover-color)';"   
                          onmouseout="this.style.color='var(--normal-color)';"></i>
                      </a>
                    <% }); %>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="no-team-members">
        <p>Our team information will be available soon.</p>
      </div>
    <% } %>
  </div>
  
  <style>
    /* Team Cards Styling */
    .team-container {
      padding: 2rem;
    }
  
    .team-card {
      background: #fff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      height: 90%;
    }
  
    .team-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
    }
  
    .team-img-container {
      position: relative;
      width: 100%;
      /* height: 150px; */
      height: 40%;
      overflow: hidden;
    }
  
    .team-img {
      width: 80%;
      height: 100%;
      object-fit: cover;
      border-radius: 10px;
      transition: transform 0.5s ease;
    }
  
    .team-card:hover .team-img {
      transform: scale(1.05);
    }
  
    .designation-badge {
      position: absolute;
      bottom: 10px;
      left: 10px;
      background: rgba(0, 0, 0, 0.7);
      color: white;
      padding: 5px 15px;
      border-radius: 20px;
      font-size: 0.8rem;
    }
  
    .team-info {
      padding: 1.5rem;
      text-align: center;
    }
  
    .member-name {
      color: #2c3e50;
      margin-bottom: 0.5rem;
      font-weight: 600;
    }
  
    .member-position {
      color: #3498db;
      font-weight: 500;
      margin-bottom: 1rem;
    }
  
    .contact-details {
      margin: 1.5rem 0;
    }
  
    .contact-item {
      display: flex;
      align-items: center;
      margin-bottom: 0.8rem;
      color: #555;
    }
  
    .contact-item i {
      margin-right: 10px;
      color: #3498db;
      width: 20px;
      text-align: center;
    }
  
    .contact-item a {
      color: #555;
      text-decoration: none;
      transition: color 0.3s ease;
    }
  
    .contact-item a:hover {
      color: #3498db;
      text-decoration: underline;
    }
  
    .social-links {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 1.5rem;
    }
  
    .social-links a {
      color: #746e6e;
      font-size: 1.8rem;
      transition: color 0.3s ease, transform 0.3s ease;
    }
  
    .social-links a:hover {
      /* color: #3498db; */
      transform: translateY(-3px);
    }
  
    .no-team-members {
      text-align: center;
      padding: 2rem;
      color: #7f8c8d;
    }
  
    @media (max-width: 768px) {
      .team-img-container {
        height: 40%;
        overflow: hidden;
        border-radius: 10px;
      }
    }
  </style>