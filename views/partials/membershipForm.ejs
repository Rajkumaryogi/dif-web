                  <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input type="email" name="individual[email]" class="form-control" required>
                  </div>
                  
                  <div class="col-md-6">
                    <label class="form-label">Phone Number</label>
                    <div class="input-group">
                      <span class="input-group-text"><i class="fas fa-phone"></i></span>
                      <input type="tel" name="individual[phone]" class="form-control" required>
