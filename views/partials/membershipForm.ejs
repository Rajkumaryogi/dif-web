                    </div>
                  </div>
                  
                  <div class="col-md-6">
                    <label class="form-label">Phone Number</label>
                    <div class="input-group">
                      <span class="input-group-text">+91</span>
                      <input type="tel" name="organization[phone]" class="form-control" placeholder="Phone Number" required>
                    </div>
                  </div>
                  
                  <div class="col-md-6">
                    <label class="form-label">State</label>
                    <select name="organization[state]" class="form-select" required>
                      <option value="">Select State</option>
                      <!-- Add your states here -->
                    </select>
                  </div>
                  
                  <div class="col-md-6">
                    <label class="form-label">District</label>
                    <select name="organization[district]" class="form-select" required>
                      <option value="">Select District</option>
                      <!-- Districts will be loaded based on state selection -->
                    </select>
                  </div>
                  
                  <div class="col-12">
                    <label class="form-label">Address</label>
                    <textarea name="organization[address]" class="form-control" rows="3" placeholder="House No. / Street Name / Locality" required></textarea>
                  </div>
                  
                  <div class="col-md-6">
                    <label class="form-label">Pin Code</label>
                    <input type="text" name="organization[pinCode]" class="form-control" placeholder="Pin Code" required>
                  </div>
                  
                  <div class="col-12 mt-3">
                    <div class="form-check">
                      <input type="checkbox" name="organization[agreedToTerms]" id="orgTerms" class="form-check-input" required>
                      <label class="form-check-label" for="orgTerms">
                        I agree to the <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">terms & conditions</a>
                      </label>
                    </div>
                  </div>
                </div>
              </div>

              <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                <button type="submit" class="btn btn-primary px-4 py-2">
                  <i class="fas fa-paper-plane me-2"></i>Submit Application
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

