                      <option value="female">Female</option>
                      <option value="other">Other</option>
                    </select>
                  </div>
                  
                  <div class="col-md-6">
                    <label class="form-label">Date of Birth</label>
                    <input type="date" name="individual[dob]" class="form-control" required>
